    "socket.io": "^2.1.1",
    "socket.io-client": "^2.1.1",
    "source-map-support": "^0.5.9",
    "webrtc4me": "git+https://git@github.com/shinyoshiaki/webrtc4me.git#stream",
    "wrtc": "^0.2.1"
  }
