{
  "name": "kad-rtc",
  "version": "0.2.0",
  "license": "Apache-2.0",
  "engines": {
    "node": ">=11"
  },
  "scripts": {
    "build": "tsc",
    "type": "tsc --noEmit",
    "update": "rm -rf ./lib && npm run build",
    "publish": "npm publish --access=public",
    "test": "npm run type && jest --forceExit",
    "test_target": "jest --forceExit ./src/kademlia/actions/findnode/test.ts",
    "server": "ts-node --project ./tsconfig.json ./src/cli.ts"
  },
  "main": "lib/index.js",
  "files": [
    "lib",
    "src"
  ],
  "devDependencies": {
    "@types/bson": "^1.0.11",
    "@types/events": "^1.2.0",
    "@types/jest": "^24.0.6",
    "@types/node": "^10.11.7",
    "@types/sha1": "^1.1.1",
    "aport": "^2.0.0",
    "jest": "^24.1.0",
    "ts-jest": "^24.0.0",
    "ts-node": "^8.1.0",
    "tslib": "^1.9.3",
    "typescript": "^3.4.1"
  },
  "dependencies": {
    "bson": "3.0.2",
    "buffer": "^5.2.1",
    "buffer-to-arraybuffer": "^0.0.5",
    "kad-distance": "git+https://git@github.com/shinyoshiaki/kad-distance.git",
    "keypair": "^1.0.1",
    "rx.mini": "git+https://git@github.com/shinyoshiaki/rx.mini.git",
    "sha1": "^1.1.1",
    "webrtc4me": "^0.5.8",
    "wrtc": "^0.4.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "globals": {
      "ts-jest": {
        "tsConfig": "tsconfig.json"
      }
    },
    "testMatch": [
      "**/__tests__/**/*.ts?(x)",
      "**/?(*.)(spec|test).ts?(x)",
      "**/?(*)(spec|test).ts?(x)"
    ]
  }
}
